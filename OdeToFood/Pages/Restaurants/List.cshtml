@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
}

<h1>Restaurants</h1>
<form method="get">
    <div class="form-group">
        <div class="input-group mb-3">
            <input type="search" class="form-control" 
                   asp-for="SearchTerm" />
            <span class="input-group-btn">
                <button class="btn btn-outline-secondary"><i class="fa fa-search">Search</i></button>
            </span>
        </div>
    </div>
</form>

<table class="table">
    @foreach(var restaurant in Model.Restaurants)
    {
    <tr>
        <td>@restaurant.Name</td>
        <td>@restaurant.Location</td>
        <td>@restaurant.CuisineType</td>
        <td>
            <a class="btn btn-outline-secondary"
               asp-page="./Detail"
               asp-route-restaurantId=@restaurant.Id>
                <i class="fa fa-search">View</i>
            </a>
            <a class="btn btn-outline-secondary"
               asp-page="./Edit"
               asp-route-restaurantId=@restaurant.Id>
                <i class="fa fa-search">Edit</i>
            </a>
        </td>
    </tr>
    }
</table>

<a asp-page=".\Edit" class="btn btn-primary">Add New</a>
<div>@Model.Message</div>